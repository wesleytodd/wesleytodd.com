{
	"types" : {
		"page" : {
			"directory" : "content/pages",
			"permalinks" : "{{slug}}.html"
		},
		"post" : {
			"directory" : "content/posts",
			"permalinks" : "{{meta.date.year}}/{{meta.date.month}}/{{slug}}.html",
			"filters" : {
				"markdown" : {}
			}
		},
		"media" : {
			"directory" : "content/media",
			"permalinks" : "media/{{slug}}.{{suffix}}",
			"filters" : {
				"imagemin" : {
					"files" : [
						"**/*.jpg",
						"**/*.jpeg",
						"**/*.png
					]
				},
				"svgmin" : {
					"files" : [
						"**/*.svg"
					]
				}
			}
		}
	},
	"themes" : {
		"directory" : "themes",
		"active" : "default",
		"extention" : "hb",
		"filters" : {
			"handelbars" : {
				"preFilter" : [
					"helpers.js"
				]
			}
		},
		"favicons" : [
			"favicon.ico",
			"apple-touch-icon.png"
		]
	},
	"build" : {
		"directory" : "build"
	},
	"rufio" : {
		"metaTokens" : {
			"start" : "----BEGIN META----",
			"end" : "----END META----"
		}
	}
}
