{
	"title": "John Wesley Todd",
	"hostname": "wesleytodd.com",
	"tagline": "A javascript application developer",
	"titleFormat": "{{title}} - {{site.title}} - {{site.tagline}}",
	"types": {
		"pages": {
			"directory": "content/pages",
			"route": "/:slug.html",
			"mime": "text/html",
			"filters": ["yamlMeta", "mustache"]
		},
		"posts" : {
			"directory": "content/posts",
			"route": "/posts/:year/:month/:slug.html",
			"mime": "text/html",
			"filters": ["yamlMeta", "markdown"],
			"indexes": [{
				"title": "Articles for {{year}}",
				"route": "/posts/:year",
				"groupBy": "year"
			}, {
				"title": "Articles for {{month}} {{year}}",
				"route": "/posts/:year/:month",
				"groupBy": ["year", "month"]
			}]
		},
		"media": {
			"directory": "content/media",
			"route": "/media/:pathSegments*/:basename:ext",
			"filters": ["mediaMeta"],
			"excludePattern": ["!**/*.psd", "!**/_*"]
		},
		"images": {
			"directory": "assets/images",
			"route": "/assets/images/:pathSegments*/:basename:ext",
			"filters": ["mediaMeta"]
		},
		"css": {
			"directory": "assets/scss",
			"route": "/assets/css/:pathSegments*/:basename:ext",
			"filters": ["mediaMeta", "sass"],
			"mime": "text/css"
		},
		"js": {
			"directory": "assets/js",
			"route": "/assets/js/:pathSegments*/:basename:ext",
			"filters": ["mediaMeta", "browserify"]
		}
	}
}
